@model Vince.SiteUI.Models.VinceViewModel

@{
    ViewBag.Title = "Home";
}


 <div class="container-fluid body-content">
        <div id="carousel" class="carousel slide" data-interval="4000">
            <!-- dot navigation-->
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
            </ol>
            <!--wrapper for slides-->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Louisville.jpg" class="img-responsive" />
                    <div class="carousel-caption">
                        <h3>City</h3>
                    </div>
                </div>
                <div class="item sliderpic">
                    <img src="~/Uofl.jpg" class="img-responsive sliderpic" />
                    <div class="carousel-caption">
                        <h3>UofL</h3>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
<div class="container welcome">
    <div >
        <div class="row"style="background: rgb(46, 45, 44); border-radius:5px; box-shadow: rgb(255, 0, 0) 0 0 3px">
            <div class="col-md-12">
                <h2 id="header">WELCOME</h2>
                <p class="intro">
                    My name is Vince Patrick and I am a senior Computer Information Systems major at the University of Louisville with a track in both Web Development and Information Security. <br />
                    <br /> Currently, I am looking for a full-time position in Web Development for when I graduate in May 2018<br />

                </p>
            </div>

            <div class="col-md-12">
                <h3 id="header"> SKILLS</h3>
             </div>
             <div class="col-md-4">
                    
                     @foreach (var s in Model.CurrentSkills.Take(4)) { <ul style="margin: 3px;">
                        <li>@s</li>
                    </ul>
                }
                    </div>
                <div class="col-md-4">
                    @foreach (var s in Model.CurrentSkills.Skip(4).Take(4))
                    { <ul style="margin: 3px";>
                        <li>@s</li>
                    </ul>
                    }
                </div>
                <div class="col-md-4">
                <h3 id="progress">Exam 483 C# Certified</h3>
                @*@foreach (var s in Model.UpcomingSkills)
            {
                    <ul>
                        <li>@s</li>
                    </ul>
                }*@
                </div>


        <div class="col-md-6">
            <h3 id="header">EXPERIENCE</h3>
            <ul style="list-style-type:square">
                <li>IT intern at Zirmed in Louisville, KY.</li>
                <li>I am a part of on-going class project in planning, designing, and developing a website for non-profit KHBPA.</li>
            </ul>
        </div>
        <div class="col-md-6">
            <h3 id="header">EDUCATION</h3>
            <ul style="list-style-type:square">
                <li>Eastern High School : 2010-2014</li>
                <li>University of Louisville : 2014-2018</li>
            </ul>
        </div>

            <div class="col-md-12">
                <h3 id="header">GOALS</h3>
                <ul style="list-style-type:none">
                    <li> Some of my short term goals include to graduate in May 2018 while maintaining my 3.93 GPA. I would also like to find a full time job before I graduate. While long term I would like to become a full stack developer.</li>
                </ul>
            </div>
    </div>
</div>
    </div>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#carousel').carousel()
        });
    </script>
    }
